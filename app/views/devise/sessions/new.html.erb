<div class="container container_login">
     <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: "form-signin"}) do |f| %>
        <img class="center-block logologin" src="/assets/logo.svg">

            <%= f.label :name %><br />
            <div class="input-group input-group-lg">
               <span class="input-group-addon" id="sizing-addon1"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
               <%= f.text_field :name, autofocus: true, class:"form-control", "aria-describedby" => "sizing-addon1"%>
            </div>

            <%= f.label :password%><br />
            <div class="input-group input-group-lg">
              <span class="input-group-addon" id="sizing-addon1"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
             <%= f.password_field :password, autocomplete: "off", class:"form-control", "aria-describedby" => "sizing-addon1" %>
           </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
          <div class="actions">
            <%= f.submit "Acceder", class:"btn btn-lg btn-block botoniniciar", id:"buttomlogin"%>
          </div>
          <div id="invalid"><%=alert%></div>  
      <% end %>
      <div class="cajablanca"></div> 
</div>



