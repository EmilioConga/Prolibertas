<!DOCTYPE html>
<html ng-app='prolibertas'>
<head>
  <title>Prolibertas</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- MENU LATERAL -->
  <div class="list-group nav navbar-nav col-md-3">

    <img class="logo" src="/assets/logo-menu.svg">

    <ul class="list-group lista">
      
      <li><a href="#" 
        class="list-group-item lista__el">
        <span class="lista__el__text">PERSONAS</span></a>
      </li>
      
      <li><a href="#" 
        class="list-group-item lista__el"><span class="lista__el__text">FAMILIAS</span></a>
      </li>
      
      <li><a href="#" 
        class="list-group-item lista__el"><span class="lista__el__text">SERVICIOS</span></a>
      </li>
      
      <li><a href="#" 
        class="list-group-item lista__el"><span class="lista__el__text">INFORMES</span></a>
      </li>

    </ul>
    
